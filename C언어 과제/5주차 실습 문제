#include <stdio.h>
#include <string.h>

#define MAX_PRODUCTS 100

typedef struct {
    char name[50];
    int stock_in;
    int sales;
    int stock;
} Product;

Product products[MAX_PRODUCTS];
int product_count = 0;

void add_product() {
    if (product_count < MAX_PRODUCTS) {
        printf("상품명을 입력하세요: ");
        scanf("%s", products[product_count].name);
        products[product_count].stock_in = 0;
        products[product_count].sales = 0;
        products[product_count].stock = 0;
        product_count++;
        printf("상품이 추가되었습니다.\n");
    } else {
        printf("더 이상 상품을 추가할 수 없습니다.\n");
    }
}

void view_products() {
    printf("\n상품 현황:\n");
    for (int i = 0; i < product_count; i++) {
        printf("상품명: %s, 입고수량: %d, 판매수량: %d, 재고수량: %d\n",
               products[i].name, products[i].stock_in, products[i].sales, products[i].stock);
    }
}

int main() {
    int choice;
    while (1) {
        printf("\n메뉴:\n");
        printf("1. 상품명 입력\n");
        printf("2. 상품 현황 확인\n");
        printf("3. 종료\n");
        printf("선택: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                add_product();
                break;
            case 2:
                view_products();
                break;
            case 3:
                return 0;
            default:
                printf("잘못된 선택입니다.\n");
        }
    }
}
